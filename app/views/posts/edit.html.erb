<div class="row">
  <div class="col-12">
    <h1>投稿編集</h1>
    <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :images %>
        <%= f.file_field :images, class: "form-control-file", accept: "image/*", multiple: true %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
      <div>
        <%= link_to "Show", post_path(@post.id) %>
        |
        <%= link_to "戻る", posts_path %>
      </div>
    <% end %>
  </div>
</div>
